@model IEnumerable<Category>

@{ 
    string actionName = "All" + ViewBag.Type + "s";
  
}

<h3 class="pt-4 text-warning"> @ViewBag.Type Categories</h3>
<div class="pt-4">
    <div>
        <a class="btn btn-block btn-@(ViewBag.SelectedCatName=="" ? "primary": "outline-dark")" asp-route-CatName="" asp-action="@actionName">
            All @{@ViewBag.Type}s
        </a>
    </div>
    @foreach (Category c in Model)
    {

        <div class="mt-2">
            <a class="btn btn-block btn-@(ViewBag.SelectedCatName==c.Name ? "primary": "outline-dark")"
               asp-route-CatName="@c.Name" asp-action="@actionName">@c.Name</a>
        </div>

    }
</div>