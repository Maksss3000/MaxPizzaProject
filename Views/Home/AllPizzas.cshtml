@model IEnumerable<Pizza>

<div class="container-fluid  bg-secondary min-vh-100">
    <div class="row">
        <div class="col-3">
            <vc:pizza-categories />
        </div>
        <div class="col-8 d-flex flex-row justify-content-lg-between flex-wrap ">

            @foreach (Pizza p in Model)
            {
                <div class="mt-4 d-flex flex-column  align-items-center">
                    <div class="text-black mb-2">
                        <h4> @p.Name</h4>
                    </div>
                    <a asp-route-pizzaId="@p.Id" asp-action="SpecificPizza">
                        <img class="rounded"
                             src="/@p.ImagePath"
                             alt="pizza" />
                    </a>

                </div>
            }

        </div>
    </div>





</div>