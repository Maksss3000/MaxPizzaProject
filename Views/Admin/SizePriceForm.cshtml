@model CategorySize
   
<form asp-action="AddSizePriceToCategory" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label for="catId">Please Select Size</label>
        <div><span asp-validation-for="Size.TheSize" class="text-danger"></span></div>
        <select class="form-control" asp-for="Size.TheSize">
            <option value="" selected disabled hidden>Size for Category</option>

            @foreach (Size size in ViewBag.ExistedSizes)
            {
                <option value="@size.TheSize">@size.TheSize</option>

            }

            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input type="text" asp-for="Price"  maxlength="6" class="form-control" placeholder="Price for Selected Size">
    </div>


    <button class=" mt-2 btn btn-success" type="submit">Add</button>
    @if (!string.IsNullOrEmpty(ViewBag.Type))
    {
        <div class="mt-3 text-center">
            <h4 class="text-warning"></h4>
            <a class="btn btn-primary btn-lg btn-block" asp-action="ProductForm" asp-route-productName="@ViewBag.Type">Go to page to add product to created Category.</a>
        </div>
        
    }

</form>