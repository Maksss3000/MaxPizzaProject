@model Size

<form asp-action="AddOrEditSize" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TheSize">Please Enter Size Name</label>
        <div><span asp-validation-for="TheSize" class="text-danger"></span></div>
        <input type="text" asp-for="TheSize" class="form-control" placeholder="Enter Size">
        <input type="text" asp-for="Id" hidden class="form-control" value="@Model.Id">
    </div>
    <button class="btn btn-success" type="submit">@( Model.Id==0 ? "Add":"Edit")</button>
</form>